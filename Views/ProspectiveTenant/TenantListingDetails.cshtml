@model EliteRentals.Models.DTOs.PropertyReadDto
@{
    ViewData["Title"] = (Model?.Title ?? "Property Details") + " - EliteRentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var apiBase = (string)(ViewData["ApiBaseUrl"] ?? "");
    var imgSrc = (Model != null) ? $"{apiBase}api/Property/{Model.PropertyId}/image" : "https://via.placeholder.com/1200x900?text=No+Image";
}

@if (TempData["AppSubmitted"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="container mt-3">
        <div class="alert alert-success shadow-sm rounded-3">@ok</div>
    </div>
}

<section class="bg-primary text-white text-center py-5 mb-4">
    <div class="container">
        <h1 class="display-4 fw-bold">@(!string.IsNullOrWhiteSpace(Model?.Title) ? Model!.Title : "Property Details")</h1>
        <p class="lead">@((Model != null) ? $"{Model.Address}, {Model.City}, {Model.Province}" : "View all information about this rental property.")</p>
    </div>
</section>

<nav aria-label="breadcrumb" class="bg-light py-2 shadow-sm mb-4 rounded-3">
    <div class="container">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="ProspectiveTenant" asp-action="TenantPropertyListings">Property Listings</a></li>
            <li class="breadcrumb-item active" aria-current="page">Property Details</li>
        </ol>
    </div>
</nav>

<div class="container my-5">
    @if (Model == null)
    {
        <div class="alert alert-danger text-center py-4 shadow-sm rounded-3">
            <h4 class="alert-heading">Property Not Found</h4>
            <p>The property could not be found.</p>
            <a asp-controller="ProspectiveTenant" asp-action="TenantPropertyListings" class="btn btn-secondary btn-lg">Back to Listings</a>
        </div>
    }
    else
    {
        <div class="row g-4 align-items-start">
            <div class="col-lg-6">
                <div class="card shadow-sm rounded-4">
                    <img src="@imgSrc" class="card-img-top rounded-top-4"
                         alt="Property @Model.PropertyId"
                         onerror="this.src='https://via.placeholder.com/1200x900?text=No+Image';">
                </div>
            </div>

            <div class="col-lg-6">
                <h1 class="fw-bold mb-1">@(!string.IsNullOrWhiteSpace(Model.Title) ? Model.Title : "Untitled Listing")</h1>
                <div class="text-muted mb-2">@Model.Address, @Model.City, @Model.Province</div>
                <span class="badge bg-@(Model.Status?.ToLower()=="available"?"success":(Model.Status?.ToLower()=="rented"?"secondary":"warning"))">@Model.Status</span>

                <div class="display-6 my-3">R @Model.RentAmount</div>

                <ul class="list-unstyled mb-3">
                    <li><strong>Bedrooms:</strong> @Model.NumOfBedrooms</li>
                    <li><strong>Bathrooms:</strong> @Model.NumOfBathrooms</li>
                    <li><strong>Parking:</strong> @Model.ParkingType (@Model.NumOfParkingSpots)</li>
                    <li><strong>Pet friendly:</strong> @(Model.PetFriendly ? "Yes" : "No")</li>
                </ul>

                <p class="mt-3">@Model.Description</p>

                <div class="mt-4 d-flex flex-wrap gap-3">
                    @if ((Model.Status ?? "").Equals("Available", StringComparison.OrdinalIgnoreCase))
                    {
                        <a asp-controller="ProspectiveTenant"
                           asp-action="TenantApplicationForm"
                           asp-route-propertyId="@Model.PropertyId"
                           class="btn btn-primary btn-lg">Apply Now</a>
                    }
                    else
                    {
                        <button class="btn btn-outline-secondary btn-lg" disabled>Not Available</button>
                    }

                    <a asp-controller="ProspectiveTenant"
                       asp-action="TenantPropertyListings"
                       class="btn btn-outline-secondary btn-lg">Back to Listings</a>
                </div>
            </div>
        </div>
    }
</div>
