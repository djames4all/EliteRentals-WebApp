@model EliteRentals.Models.ViewModels.PropertyListViewModel
@{
    ViewData["Title"] = "Property Listings - EliteRentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">
    <section class="bg-primary text-white text-center py-5" style="background: linear-gradient(90deg, rgba(0,123,255,0.9), rgba(0,86,179,0.9)), url('https://via.placeholder.com/1600x600') center/cover no-repeat;">
        <div class="container py-4">
            <h1 class="display-4 fw-bold">Find Your Perfect Rental</h1>
            <p class="lead mb-0">Browse verified properties.</p>
        </div>
    </section>

    <section class="bg-light py-3 shadow-sm mb-4">
        <div class="container">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Location</label>
                    <input type="text" name="Location" value="@Model.Query.Location" class="form-control" placeholder="City, province, or address" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Min Bedrooms</label>
                    <select class="form-select" name="MinBedrooms">
                        <option value="">Any</option>
                        @for (var b = 1; b <= 5; b++)
                        {
                            <option value="@b" selected="@(Model.Query.MinBedrooms == b ? "selected" : null)">@b+</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Pet Friendly</label>
                    <select class="form-select" name="PetFriendly">
                        <option value="">Any</option>
                        <option value="true" selected="@(Model.Query.PetFriendly == true ? "selected" : null)">Yes</option>
                        <option value="false" selected="@(Model.Query.PetFriendly == false ? "selected" : null)">No</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Sort By</label>
                    <select class="form-select" name="SortBy">
                        <option value="newest" selected="@(Model.Query.SortBy=="newest" ? "selected" : null)">Newest</option>
                        <option value="lowest" selected="@(Model.Query.SortBy=="lowest" ? "selected" : null)">Price: Low to High</option>
                        <option value="highest" selected="@(Model.Query.SortBy=="highest" ? "selected" : null)">Price: High to Low</option>
                    </select>
                </div>

                <div class="col-md-2 d-flex gap-2">
                    <button class="btn btn-primary w-100">Apply</button>
                </div>
            </form>
        </div>
    </section>

    <div class="container pb-5">
        @if (Model.Items.Count == 0)
        {
            <div class="text-center py-5">
                <h4 class="fw-bold">No properties found</h4>
                <p class="text-muted">Try clearing filters or checking back later.</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var p in Model.Items)
                {
                    var imgSrc = $"{Model.ApiBaseUrl}api/Property/{p.PropertyId}/image";
                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="@imgSrc" class="card-img-top" alt="Property @p.PropertyId"
                                 onerror="this.src='https://via.placeholder.com/800x600?text=No+Image';" />
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h5 class="card-title mb-1">@(!string.IsNullOrWhiteSpace(p.Title) ? p.Title : "Untitled")</h5>
                                    <span class="badge bg-@(p.Status?.ToLower()=="available"?"success":(p.Status?.ToLower()=="rented"?"secondary":"warning"))">
                                        @(p.Status ?? "Unknown")
                                    </span>
                                </div>
                                <p class="mb-2 text-muted">@p.Address, @p.City</p>
                                <div class="small text-muted mb-2">
                                    <span class="me-3">@p.NumOfBedrooms bed</span>
                                    <span class="me-3">@p.NumOfBathrooms bath</span>
                                    <span>@(p.PetFriendly ? "Pet friendly" : "No pets")</span>
                                </div>
                                <div class="h5 mb-3">R @p.RentAmount</div>
                                <a class="btn btn-outline-primary w-100"
                                   asp-controller="ProspectiveTenant"
                                   asp-action="TenantListingDetails"
                                   asp-route-id="@p.PropertyId">
                                    View details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    @{
                        int curr = Model.Query.Page;
                        int total = Model.TotalPages;
                        bool prevDisabled = curr <= 1;
                        bool nextDisabled = curr >= total || total == 0;
                    }

                    <li class="page-item @(prevDisabled ? "disabled" : "")">
                        <a class="page-link"
                           asp-controller="ProspectiveTenant"
                           asp-action="TenantPropertyListings"
                           asp-route-Location="@Model.Query.Location"
                           asp-route-MinBedrooms="@Model.Query.MinBedrooms"
                           asp-route-PetFriendly="@Model.Query.PetFriendly"
                           asp-route-SortBy="@Model.Query.SortBy"
                           asp-route-PageSize="@Model.Query.PageSize"
                           asp-route-Page="@(curr - 1)">&laquo;</a>
                    </li>

                    @for (var i = 1; i <= total; i++)
                    {
                        <li class="page-item @(i==curr?"active":"")">
                            <a class="page-link"
                               asp-controller="ProspectiveTenant"
                               asp-action="TenantPropertyListings"
                               asp-route-Location="@Model.Query.Location"
                               asp-route-MinBedrooms="@Model.Query.MinBedrooms"
                               asp-route-PetFriendly="@Model.Query.PetFriendly"
                               asp-route-SortBy="@Model.Query.SortBy"
                               asp-route-PageSize="@Model.Query.PageSize"
                               asp-route-Page="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(nextDisabled ? "disabled" : "")">
                        <a class="page-link"
                           asp-controller="ProspectiveTenant"
                           asp-action="TenantPropertyListings"
                           asp-route-Location="@Model.Query.Location"
                           asp-route-MinBedrooms="@Model.Query.MinBedrooms"
                           asp-route-PetFriendly="@Model.Query.PetFriendly"
                           asp-route-SortBy="@Model.Query.SortBy"
                           asp-route-PageSize="@Model.Query.PageSize"
                           asp-route-Page="@(curr + 1)">&raquo;</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
