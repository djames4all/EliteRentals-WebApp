@* Views/Shared/_AdminSidebar.cshtml *@
@{
    var currentTitle = ViewData["Title"]?.ToString() ?? "";
    string title = currentTitle.ToLower();
}

<style>
    .nav-link.active {
        border-left: 4px solid #dc3545; /* Red line */
        background-color: rgba(220, 53, 69, 0.1); /* Optional subtle background */
        font-weight: 500;
    }

    .sidebar {
        min-height: 100vh; /* Full height */
        padding-top: 1rem;
    }
</style>

<nav class="col-md-2 d-none d-md-block bg-dark sidebar text-white">
    <div class="position-sticky">
        <h4 class="px-3 text-white">Admin</h4>
        <ul class="nav flex-column mt-4">
            <li class="nav-item">
                <a class="nav-link @(title.Contains("dashboard") ? "active" : "") text-white"
                   href="@Url.Action("AdminDashboard", "Admin")">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(title.Contains("properties") ? "active" : "") text-white"
                   href="@Url.Action("AdminProperties", "Admin")">Properties</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(title.Contains("system") && title.Contains("user") ? "active" : "") text-white"
                   href="@Url.Action("AdminSystemUser", "Admin")">System Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(title.Contains("leases") ? "active" : "") text-white"
                   href="@Url.Action("AdminLeases", "Admin")">Leases</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(title.Contains("payments") ? "active" : "") text-white"
                   href="@Url.Action("AdminPayments", "Admin")">Payments</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(title.Contains("maintenance") ? "active" : "") text-white"
                   href="@Url.Action("AdminMaintenance", "Admin")">Maintenance</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(title.Contains("messages") ? "active" : "") text-white"
                   href="@Url.Action("AdminMessages", "Admin")">Messages</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(title.Contains("chatbot") ? "active" : "") text-white"
                   href="@Url.Action("AdminChatbot", "Admin")">Chatbot</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(title.Contains("reports") ? "active" : "") text-white"
                   href="@Url.Action("AdminReports", "Admin")">Reports</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(title.Contains("settings") ? "active" : "") text-white"
                   href="@Url.Action("AdminSettings", "Admin")">Settings</a>
            </li>
        </ul>
    </div>
</nav>
