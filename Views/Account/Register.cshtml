@model EliteRentals.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register - Elite Rentals";
    Layout = "_Layout";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Page background */
    .register-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background: linear-gradient(rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0.55)), url('https://cdn.trendir.com/wp-content/uploads/2016/06/Modern-Mansion-in-Beverly-Hills.jpg') no-repeat center center fixed;
        background-size: cover;
        position: relative;
        overflow: hidden;
    }

    /* Transparent card (glass) */
    .register-card {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 460px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255,255,255,0.2);
        border-radius: 1.5rem;
        backdrop-filter: blur(15px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.35);
        padding: 2rem 2.5rem;
        color: #fff;
        transition: all 0.3s ease;
    }

        .register-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 16px 40px rgba(0,0,0,0.45);
        }

        /* Scope heading color to the card only (do not override global .text-dark) */
        .register-card .text-dark {
            color: #fff !important;
        }

    .form-label {
        font-weight: 600;
        color: #f1f1f1;
    }

    .form-control, .form-select {
        background: rgba(255,255,255,0.15);
        border: 1px solid rgba(255,255,255,0.3);
        color: #fff;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
    }

        .form-control::placeholder,
        .form-select option {
            color: rgba(255,255,255,0.65);
        }

        .form-control:focus, .form-select:focus {
            background: rgba(255,255,255,0.25);
            border-color: #00bcd4;
            box-shadow: 0 0 0 0.2rem rgba(0,188,212,0.25);
        }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #00bcd4);
        border: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0056b3, #0097a7);
            transform: scale(1.03);
        }

    .btn-light {
        background: rgba(255,255,255,0.9);
        color: #444;
        transition: all 0.3s ease;
    }

        .btn-light:hover {
            background: #fff;
            transform: scale(1.03);
        }

    .divider hr {
        border-top: 1px solid rgba(255,255,255,0.25);
    }

    .logo-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: rgba(255,255,255,0.15);
        padding: 10px;
        box-shadow: 0 0 12px rgba(0,0,0,0.4);
        margin-bottom: 1rem;
    }

    .text-muted {
        color: rgba(255,255,255,0.75) !important;
    }

    .bg-white {
        background-color: rgba(255,255,255,0.85) !important;
    }

    @@media (prefers-reduced-motion: reduce) {
        .register-card, .btn-primary, .btn-light

    {
        transition: none !important;
    }

    .register-card:hover,
    .btn-primary:hover,
    .btn-light:hover {
        transform: none !important;
    }

    }
</style>

<div class="register-page">
    <div class="register-card" role="form" aria-labelledby="registerTitle">
        <div class="text-center mb-4">
            <div class="logo-circle mx-auto d-flex align-items-center justify-content-center">
                <img src="~/images/logo.jpg" alt="Elite Rentals Logo"
                     class="img-fluid rounded-circle" style="max-height: 60px;">
            </div>
            <h3 id="registerTitle" class="fw-bold text-dark mb-1">Create an Account</h3>
            <p class="text-muted mb-0">Join Elite Rentals and experience smarter property management.</p>
        </div>

        <form asp-action="Register" method="post" class="mt-3">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control form-control-lg" placeholder="Enter your first name" />
                <span asp-validation-for="FirstName" class="text-warning small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control form-control-lg" placeholder="Enter your last name" />
                <span asp-validation-for="LastName" class="text-warning small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-warning small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Create a strong password" />
                <span asp-validation-for="Password" class="text-warning small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Role" class="form-label">Select Role</label>
                <select asp-for="Role" class="form-select form-select-lg">
                    <option value="">-- Choose your role --</option>
                    <option value="Tenant">Tenant</option>
                </select>
                <span asp-validation-for="Role" class="text-warning small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">Register</button>
            </div>

            <div class="divider text-center text-muted position-relative my-3">
                <hr>
                <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 small">OR</span>
            </div>

            <a asp-controller="Account" asp-action="GoogleLogin"
               class="btn btn-light btn-lg border rounded-pill d-flex align-items-center justify-content-center shadow-sm mb-2 fw-semibold">
                <img src="https://www.gstatic.com/images/branding/product/1x/gsa_64dp.png"
                     alt="Google Logo" style="height: 24px; width: 24px; margin-right: 10px;">
                Sign up with Google
            </a>
        </form>

        <div class="text-center mt-4">
            <p class="mb-1 text-muted">
                Already have an account?
                <a asp-controller="Account" asp-action="Login" class="fw-semibold text-info text-decoration-none">Login here</a>
            </p>
            <a asp-controller="Home" asp-action="Index" class="text-muted small text-decoration-none d-inline-block mt-1">← Back to Home</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
