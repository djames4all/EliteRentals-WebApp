@model EliteRentals.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register - Elite Rentals";
    Layout = "_Layout";
}

<!-- REGISTER PAGE WRAPPER -->
<div class="register-page d-flex align-items-center justify-content-center"
     style="min-height:100vh; background: url('/images/login-bg.jpg') center/cover no-repeat;">

    <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5"
         style="max-width: 460px; width: 100%; background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(8px);">

        <!-- Header -->
        <div class="text-center mb-4">
            <img src="~/images/logo.jpg" alt="Elite Rentals Logo"
                 class="mb-3 rounded-circle shadow-sm" style="max-height: 80px; object-fit: contain;">
            <h3 class="fw-bold text-dark mb-1">Create an Account</h3>
            <p class="text-muted mb-0">Join Elite Rentals and experience smarter property management.</p>
        </div>

        <!-- Register Form -->
        <form asp-action="Register" method="post" class="mt-3">

            <!-- First Name -->
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label fw-semibold">First Name</label>
                <input asp-for="FirstName" class="form-control form-control-lg rounded-3"
                       placeholder="Enter your first name" />
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>

            <!-- Last Name -->
            <div class="mb-3">
                <label asp-for="LastName" class="form-label fw-semibold">Last Name</label>
                <input asp-for="LastName" class="form-control form-control-lg rounded-3"
                       placeholder="Enter your last name" />
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control form-control-lg rounded-3"
                       placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                <input asp-for="Password" type="password"
                       class="form-control form-control-lg rounded-3"
                       placeholder="Create a strong password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Role -->
            <div class="mb-4">
                <label asp-for="Role" class="form-label fw-semibold">Select Role</label>
                <select asp-for="Role" class="form-select form-select-lg rounded-3">
                    <option value="">-- Choose your role --</option>
                    <option value="Tenant">Tenant</option>
                    <option value="Caretaker">Caretaker</option>
                    <option value="PropertyManager">Property Manager</option>
                </select>
                <span asp-validation-for="Role" class="text-danger small"></span>
            </div>

            <!-- Register Button -->
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                    Register
                </button>
            </div>

            <!-- Divider -->
            <div class="text-center text-muted position-relative my-3">
                <hr>
                <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 small">OR</span>
            </div>

            <!-- Google Register -->
            <a asp-controller="Account" asp-action="GoogleLogin"
               class="btn btn-light btn-lg border rounded-pill d-flex align-items-center justify-content-center shadow-sm mb-2"
               style="font-weight: 500;">
                <img src="https://www.gstatic.com/images/branding/product/1x/gsa_64dp.png"
                     alt="Google Logo" style="height: 24px; width: 24px; margin-right: 10px;">
                Sign up with Google
            </a>
        </form>

        <!-- Footer -->
        <div class="text-center mt-4">
            <p class="mb-1 text-muted">
                Already have an account?
                <a asp-controller="Account" asp-action="Login"
                   class="fw-semibold text-primary text-decoration-none">Login here</a>
            </p>
            <a asp-controller="Home" asp-action="Index"
               class="text-muted small text-decoration-none d-inline-block mt-1">← Back to Home</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
