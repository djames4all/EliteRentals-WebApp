@model EliteRentals.Models.LoginViewModel

@{
    ViewData["Title"] = "Login - Elite Rentals";
    Layout = "_Layout";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

<style>
    /* Global layout reset */
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        overflow-x: hidden;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .navbar {
        margin-bottom: 0 !important;
    }

    .content-wrapper {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    /* Full background for login page */
    .login-page {
        position: relative;
        flex-grow: 1;
        width: 100vw;
        margin: 0;
        margin-top: -1px;
        padding: 5rem 2rem;
        left: 50%;
        right: 50%;
        transform: translateX(-50%);
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/Loginpage.jpg') center/cover no-repeat;
        background-attachment: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        box-sizing: border-box;
    }

    /* Frosted-glass login card */
    .login-card {
        position: relative;
        width: 100%;
        max-width: 420px;
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255,255,255,0.25);
        border-radius: 1.5rem;
        backdrop-filter: blur(20px);
        box-shadow: 0 12px 35px rgba(0,0,0,0.45);
        padding: 2.5rem;
        color: #fff;
        transition: all 0.3s ease;
    }

        .login-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 18px 45px rgba(0,0,0,0.55);
        }

    /* Inputs */
    .form-control {
        background: rgba(255,255,255,0.15);
        border: 1px solid rgba(255,255,255,0.3);
        color: #fff;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background: rgba(255,255,255,0.25);
            border-color: #00bcd4;
            box-shadow: 0 0 0 0.2rem rgba(0,188,212,0.25);
        }

    .form-label {
        font-weight: 600;
        color: #f1f1f1;
    }

    /* Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #007bff, #00bcd4);
        border: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0056b3, #0097a7);
            transform: scale(1.03);
        }

    .btn-light {
        background: rgba(255,255,255,0.9);
        color: #444;
        transition: all 0.3s ease;
    }

        .btn-light:hover {
            background: #fff;
            transform: scale(1.03);
        }

    /* Divider */
    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        color: rgba(255,255,255,0.6);
        margin: 1.5rem 0;
    }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid rgba(255,255,255,0.2);
        }

        .divider:not(:empty)::before {
            margin-right: .75em;
        }

        .divider:not(:empty)::after {
            margin-left: .75em;
        }

    /* Footer link */
    .login-footer a {
        color: #00bcd4;
        transition: color 0.3s;
    }

        .login-footer a:hover {
            color: #80deea;
        }

    /* Logo */
    .logo-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: rgba(255,255,255,0.15);
        padding: 10px;
        box-shadow: 0 0 12px rgba(0,0,0,0.4);
        margin-bottom: 1rem;
    }
</style>

<div class="content-wrapper login-page">
    <div class="login-card">
        <div class="text-center mb-4">
            <div class="logo-circle mx-auto d-flex align-items-center justify-content-center">
                <img src="~/images/logo.jpg" alt="Elite Rentals Logo" class="img-fluid rounded-circle" style="max-height:60px;">
            </div>
            <h3 class="fw-bold">Welcome Back</h3>
            <p class="text-light opacity-75 mb-0">Sign in to your Elite Rentals account</p>
        </div>

        <form asp-controller="Account" asp-action="Login" method="post" class="mt-4">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control form-control-lg rounded-3" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-warning small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-lg rounded-3" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-warning small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">Login</button>
            </div>

            <div class="divider">or</div>

            <a asp-controller="Account" asp-action="GoogleLogin"
               class="btn btn-light btn-lg rounded-pill d-flex align-items-center justify-content-center shadow-sm fw-semibold">
                <img src="https://www.gstatic.com/images/branding/product/1x/gsa_64dp.png"
                     alt="Google Logo" style="height: 24px; width: 24px; margin-right: 10px;">
                Continue with Google
            </a>
        </form>

        <div class="login-footer mt-4 text-center">
            <p class="mb-0 opacity-75">
                Don’t have an account?
                <a asp-controller="Account" asp-action="Register" class="fw-bold text-decoration-none">Register here</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
