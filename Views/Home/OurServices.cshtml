@{
    ViewData["Title"] = "Our Services - Elite Rentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">

    <!-- HERO SECTION -->
    <section class="position-relative text-white d-flex align-items-center justify-content-center"
             style="background: url('/images/services-hero.jpg') center/cover no-repeat; min-height: 55vh;">
        <div class="overlay position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,0,0,0.55);"></div>
        <div class="container text-center position-relative z-1 py-5 px-3">
            <h1 class="display-5 fw-bold mb-3">Our Services</h1>
            <p class="lead mb-0" style="max-width:900px;margin:auto;">
                Elite Rentals provides end-to-end property management and rental solutions designed to simplify, secure,
                and elevate the experience for landlords and tenants alike.
            </p>
        </div>
    </section>

    <!-- OVERVIEW SECTION -->
    <section class="py-5 text-center">
        <div class="container">
            <h2 class="fw-bold mb-4">Comprehensive Rental Solutions</h2>
            <p class="text-muted mx-auto" style="max-width:850px;">
                Whether you're a property owner seeking hassle-free management, a tenant looking for transparency,
                or a real estate partner aiming for operational efficiency, our services are designed to deliver
                reliability and results. We merge automation with personal care to ensure every property is managed
                with excellence.
            </p>
        </div>
    </section>

    <!-- PROPERTY MANAGEMENT -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row align-items-center g-5">
                <div class="col-md-6">
                    <img src="/images/services-property-management.jpg" alt="Property Management"
                         class="service-img rounded-4 shadow-sm hover-shadow-lg">
                </div>
                <div class="col-md-6">
                    <h2 class="fw-bold mb-3">Property Management</h2>
                    <p class="text-muted">
                        We handle every aspect of property management, from marketing your property and vetting tenants
                        to rent collecting and maintenance coordination. Our technology ensures that owners have
                        real-time access to performance metrics, lease agreements, and communication logs.
                    </p>
                    <ul class="text-muted">
                        <li>Tenant sourcing and background checks</li>
                        <li>Lease management and digital signing</li>
                        <li>Automated rent collection and reporting</li>
                        <li>Regular inspections and maintenance tracking</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- TENANT SERVICES -->
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center g-5">
                <div class="col-md-6 order-md-2">
                    <img src="/images/services-tenant.jpg" alt="Tenant Support"
                         class="service-img rounded-4 shadow-sm hover-shadow-lg">
                </div>
                <div class="col-md-6 order-md-1">
                    <h2 class="fw-bold mb-3">Tenant Services</h2>
                    <p class="text-muted">
                        We prioritize convenience and trust for our tenants. From transparent listings to seamless
                        maintenance requests, Elite Rentals ensures every interaction is straightforward and secure.
                    </p>
                    <ul class="text-muted">
                        <li>Verified property listings</li>
                        <li>Digital lease signing and payment options</li>
                        <li>24/7 maintenance request system</li>
                        <li>Dedicated tenant support and live chat</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- MAINTENANCE & INSPECTIONS -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row align-items-center g-5">
                <div class="col-md-6">
                    <img src="/images/services-maintenance.jpg" alt="Maintenance and Inspections"
                         class="service-img rounded-4 shadow-sm hover-shadow-lg">
                </div>
                <div class="col-md-6">
                    <h2 class="fw-bold mb-3">Maintenance & Inspections</h2>
                    <p class="text-muted">
                        Our smart maintenance tracking system reduces downtime and costs. We collaborate with vetted service
                        providers and contractors to handle everything from minor repairs to major refurbishments.
                    </p>
                    <ul class="text-muted">
                        <li>Real-time maintenance status updates</li>
                        <li>Verified contractor network</li>
                        <li>Automated maintenance scheduling</li>
                        <li>Comprehensive inspection reports</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- PROPERTY MARKETING -->
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center g-5">
                <div class="col-md-6 order-md-2">
                    <img src="/images/services-marketing.jpg" alt="Property Marketing"
                         class="service-img rounded-4 shadow-sm hover-shadow-lg">
                </div>
                <div class="col-md-6 order-md-1">
                    <h2 class="fw-bold mb-3">Property Marketing</h2>
                    <p class="text-muted">
                        Our marketing team ensures your property stands out through professional photography, engaging
                        listings, and multi-platform promotion to reach the right tenants quickly.
                    </p>
                    <ul class="text-muted">
                        <li>High-quality photography and listings</li>
                        <li>Promotion across major rental platforms</li>
                        <li>Targeted advertising and social media campaigns</li>
                        <li>Data-driven pricing insights</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- PREMIUM SERVICES -->
    <section class="py-5 bg-light">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">Premium & Value-Added Services</h2>
            <p class="text-muted mx-auto mb-5" style="max-width:850px;">
                Beyond standard management, Elite Rentals offers advanced tools and services that add measurable value
                to your investment and elevate tenant experience.
            </p>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm rounded-4 h-100 hover-shadow-lg p-4">
                        <img src="/images/services-ai-insights.jpg" alt="AI Insights"
                             class="card-img-top uniform-img rounded-4 mb-3">
                        <h6 class="fw-bold">AI-Driven Insights</h6>
                        <p class="text-muted small mb-0">
                            Predict rental trends, forecast maintenance needs, and optimize pricing using data analytics
                            and AI tools built into our platform.
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm rounded-4 h-100 hover-shadow-lg p-4">
                        <img src="/images/services-financials.jpg" alt="Financial Reporting"
                             class="card-img-top uniform-img rounded-4 mb-3">
                        <h6 class="fw-bold">Financial Reporting</h6>
                        <p class="text-muted small mb-0">
                            Comprehensive financial dashboards, downloadable reports, and monthly summaries for complete
                            transparency and easy accounting.
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm rounded-4 h-100 hover-shadow-lg p-4">
                        <img src="/images/services-consulting.jpg" alt="Property Consulting"
                             class="card-img-top uniform-img rounded-4 mb-3">
                        <h6 class="fw-bold">Property Consulting</h6>
                        <p class="text-muted small mb-0">
                            Strategic guidance for investors and developers; from portfolio growth planning to
                            digital transformation of property operations.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="bg-primary text-white text-center py-5">
        <div class="container">
            <h2 class="fw-bold mb-3">Let’s Manage Your Property Smarter</h2>
            <p class="mb-4" style="max-width:700px;margin:auto;">
                Join hundreds of satisfied owners and tenants who trust Elite Rentals for reliability, transparency,
                and innovation in property management.
            </p>
            <a href="/Home/ContactUs" class="btn btn-light btn-lg hover-shadow-lg">Get in Touch</a>
        </div>
    </section>

</div>
