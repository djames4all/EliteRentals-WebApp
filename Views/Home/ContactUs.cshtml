@{
    ViewData["Title"] = "Contact Us - Elite Rentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">

    <!-- HERO SECTION -->
    <section class="position-relative text-white text-center d-flex align-items-center justify-content-center"
             style="background: url('/images/contact-hero.jpg') center/cover no-repeat; min-height: 50vh;">
        <div class="overlay position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,0,0,0.55);"></div>
        <div class="container position-relative z-1 py-5 px-4">
            <h1 class="display-5 fw-bold mb-3">Contact Elite Rentals</h1>
            <p class="lead mb-0" style="max-width:800px;margin:auto;">
                Whether you’re a tenant, landlord, or partner — we’re here to assist you at any of our nationwide branches.
            </p>
        </div>
    </section>

    <!-- CONTACT FORM -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row g-5 align-items-center">
                <div class="col-lg-6">
                    <h2 class="fw-bold mb-4">Get in Touch</h2>
                    <p class="text-muted mb-4">
                        Please fill in the form below and our support team will respond as soon as possible.
                    </p>

                    <form asp-controller="Home" asp-action="SendContact" method="post" class="shadow-sm p-4 rounded-4 bg-white">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Full Name</label>
                            <input type="text" name="Name" class="form-control form-control-lg" placeholder="Enter your name" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email Address</label>
                            <input type="email" name="Email" class="form-control form-control-lg" placeholder="Enter your email" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Subject</label>
                            <input type="text" name="Subject" class="form-control form-control-lg" placeholder="How can we help?" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Message</label>
                            <textarea name="Message" class="form-control form-control-lg" rows="5" placeholder="Write your message here..." required></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">Send Message</button>
                        </div>
                    </form>
                </div>

                <div class="col-lg-6 text-center">
                    <img src="/images/contact-office1.jpg" alt="Contact us" class="img-fluid rounded-4 shadow-sm">
                </div>
            </div>
        </div>
    </section>

    <!-- BRANCHES SECTION -->
    <section class="py-5">
        <div class="container">
            <h2 class="fw-bold text-center mb-5">Our Branches Across South Africa</h2>
            <div class="row g-4">

                <!-- Branch Template -->
                @foreach (var branch in new[] {
                                new { Name = "Johannesburg - Head Office", Image="/images/branch-jhb.jpg", Address="Linbro Business Park, 16 Milkyway Ave, Frankenwald, Sandton, Gauteng, 2065", Phone="011 201 7777", Email="joburg@eliterentals.co.za", Map="https://www.google.com/maps?q=Linbro+Business+Park+Sandton+South+Africa&output=embed" },
                                new { Name = "Durban Branch", Image="/images/branch-dbn.jpg", Address="Gateway Office Park, 21 Aurora Drive, Umhlanga Ridge, Durban, KwaZulu-Natal, 4319", Phone="031 555 8888", Email="durban@eliterentals.co.za", Map="https://www.google.com/maps?q=Umhlanga+Gateway+Office+Park+Durban+South+Africa&output=embed" },
                                new { Name = "Cape Town Branch", Image="/images/branch-cpt.jpg", Address="Century City Business Park, 3 Bridgeway Rd, Century City, Cape Town, Western Cape, 7441", Phone="021 456 9000", Email="capetown@eliterentals.co.za", Map="https://www.google.com/maps?q=Century+City+Cape+Town+South+Africa&output=embed" },
                                new { Name = "Port Elizabeth Branch", Image="/images/branch-pe.jpg", Address="Greenacres Office Park, 2 Ring Rd, Greenacres, Gqeberha (Port Elizabeth), Eastern Cape, 6045", Phone="041 555 6677", Email="pe@eliterentals.co.za", Map="https://www.google.com/maps?q=Greenacres+Office+Park+Port+Elizabeth+South+Africa&output=embed" },
                                new { Name = "Bloemfontein Branch", Image="/images/branch-blm.jpg", Address="Westdene Business Centre, 94 Nelson Mandela Dr, Westdene, Bloemfontein, Free State, 9301", Phone="051 444 2211", Email="bloem@eliterentals.co.za", Map="https://www.google.com/maps?q=Westdene+Bloemfontein+South+Africa&output=embed" }
                                })
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm rounded-4 h-100">
                            <img src="@branch.Image" alt="@branch.Name" class="card-img-top rounded-top-4" style="height:200px; object-fit:cover;">
                            <div class="card-body p-4">
                                <h5 class="fw-bold text-primary mb-2">@branch.Name</h5>
                                <p class="text-muted mb-2">@branch.Address</p>
                                <p class="mb-1"><strong>Phone:</strong> @branch.Phone</p>
                                <p class="mb-3"><strong>Email:</strong> @branch.Email</p>
                                <div class="map-container rounded-3 overflow-hidden shadow-sm position-relative"
                                     data-bs-toggle="modal"
                                     data-bs-target="#mapModal"
                                     data-map="@branch.Map"
                                     data-title="@branch.Name"
                                     style="cursor:pointer;">
                                    <iframe src="@branch.Map" width="100%" height="200" style="border:0; pointer-events:none;" allowfullscreen></iframe>
                                    <div class="position-absolute top-0 start-0 w-100 h-100" style="background:rgba(0,0,0,0.1);"></div>
                                </div>
                                <p class="text-center mt-2 small text-primary fw-semibold">Click map to enlarge</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="bg-primary text-white text-center py-5">
        <div class="container">
            <h2 class="fw-bold mb-3">We’d Love to Hear From You</h2>
            <p class="mb-4" style="max-width:700px;margin:auto;">
                Connect with your nearest Elite Rentals branch or send us a message — our team will get back to you within 24 hours.
            </p>
            <a href="mailto:support@eliterentals.co.za" class="btn btn-light btn-lg rounded-pill shadow-sm">
                Email Us Directly
            </a>
        </div>
    </section>
</div>

<!-- MAP MODAL -->
<div class="modal fade" id="mapModal" tabindex="-1" aria-labelledby="mapModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-lg border-0">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold" id="mapModalLabel">Branch Location</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <iframe id="modalMapFrame" src="" width="100%" height="500" style="border:0;" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const mapModal = document.getElementById('mapModal');
        const modalTitle = document.getElementById('mapModalLabel');
        const modalFrame = document.getElementById('modalMapFrame');

        mapModal.addEventListener('show.bs.modal', event => {
            const trigger = event.relatedTarget;
            const mapSrc = trigger.getAttribute('data-map');
            const branchTitle = trigger.getAttribute('data-title');
            modalFrame.src = mapSrc;
            modalTitle.textContent = branchTitle;
        });

        mapModal.addEventListener('hidden.bs.modal', () => {
            modalFrame.src = '';
            modalTitle.textContent = 'Branch Location';
        });
    </script>
}
