@{
    ViewData["Title"] = "Contact Us - Elite Rentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">

    <!-- HERO SECTION -->
    <section class="position-relative text-white text-center d-flex align-items-center justify-content-center"
             style="background: url('/images/contact-hero.jpg') center/cover no-repeat; min-height: 50vh;">
        <div class="overlay position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,0,0,0.55);"></div>
        <div class="container position-relative z-1 py-5 px-4">
            <h1 class="display-5 fw-bold mb-3">Contact Elite Rentals</h1>
            <p class="lead mb-0" style="max-width:800px;margin:auto;">
                Whether you’re a tenant, landlord, or partner — we’re here to assist you at any of our nationwide branches.
            </p>
        </div>
    </section>

    <!-- CONTACT FORM -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row g-5 align-items-center">
                <div class="col-lg-6">
                    <h2 class="fw-bold mb-4">Get in Touch</h2>
                    <p class="text-muted mb-4">
                        Please fill in the form below and our support team will respond as soon as possible.
                    </p>

                    <form asp-controller="Home" asp-action="SendContact" method="post" class="shadow-sm p-4 rounded-4 bg-white">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Full Name</label>
                            <input type="text" name="Name" class="form-control form-control-lg" placeholder="Enter your name" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email Address</label>
                            <input type="email" name="Email" class="form-control form-control-lg" placeholder="Enter your email" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Subject</label>
                            <input type="text" name="Subject" class="form-control form-control-lg" placeholder="How can we help?" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Message</label>
                            <textarea name="Message" class="form-control form-control-lg" rows="5" placeholder="Write your message here..." required></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">Send Message</button>
                        </div>
                    </form>
                </div>

                <div class="col-lg-6 text-center">
                    <img src="/images/contact-office1.jpg" alt="Contact us" class="img-fluid rounded-4 shadow-sm">
                </div>
            </div>
        </div>
    </section>

    <!-- BRANCHES SECTION -->
    <section class="py-5">
        <div class="container">
            <h2 class="fw-bold text-center mb-5">Our Branches Across South Africa</h2>
            <div class="row g-4">

                @foreach (var branch in new[] {
                                new {
                                Name = "Johannesburg - Head Office",
                                Image="/images/branch-jhb.jpg",
                                Address="Linbro Business Park, 8 Milkyway Ave, Frankenwald, Sandton, Gauteng, 2090",
                                Phone="011 156 7562",
                                Email="jhb@eliterentals.co.za",
                                Map="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3583.749009555916!2d28.1161275!3d-26.074457900000002!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1e956d003ff87a21%3A0xa35d69e64af9e427!2sElite%20Rentals%20-%20JHB%20Head%20Office!5e0!3m2!1sen!2sza!4v1763021715212!5m2!1sen!2sza"
                                },
                                new {
                                Name = "Durban Branch",
                                Image="/images/branch-dbn.jpg",
                                Address="Island Business Park, Unit 10, 23 Flanders Dr, Mount Edgecombe, Durban, KwaZulu-Natal, 4300",
                                Phone="011 201 4531",
                                Email="dbn@eliterentals.co.za",
                                Map="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d13861.277305942569!2d31.0520308!3d-29.7105081!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1ef70500160d0861%3A0xfd6a5a77d77bde7b!2sElite%20Rentals%20-%20KwaZulu%20Natal!5e0!3m2!1sen!2sza!4v1763021763600!5m2!1sen!2sza"
                                },
                                new {
                                Name = "Cape Town Branch",
                                Image="/images/branch-cpt.jpg",
                                Address="Spearhead Business Park, A1 Cnr Freedom, Montague Dr, Cape Town, Western Cape, 7441",
                                Phone="011 861 9045",
                                Email="cpt@eliterentals.co.za",
                                Map="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d6625.12787965842!2d18.5167757!3d-33.8751272!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1dcc5f0015ddf7f7%3A0xed499e5260069e7!2sElite%20Rentals%20-%20Cape%20Town!5e0!3m2!1sen!2sza!4v1763021788416!5m2!1sen!2sza"
                                },
                                new {
                                Name = "Port Elizabeth Branch",
                                Image="/images/branch-pe1.jpg",
                                Address="United Business Park, 52A Pickering Street, Newton Park, Gqeberha (Port Elizabeth), Eastern Cape, 6055",
