@model List<EliteRentals.Models.DTOs.MessageDto>

@{
    ViewData["Title"] = "Archived Messages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("_AdminSidebar")

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
            <h2 class="mb-3">Archived Messages</h2>

            <a asp-action="AdminMessages" class="btn btn-secondary mb-3">
                <i class="fas fa-arrow-left"></i> Back to Messages
            </a>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            @if (Model.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Sender ID</th>
                            <th>Receiver ID</th>
                            <th>Message</th>
                            <th>Archived On</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var msg in Model)
                        {
                            <tr>
                                <td>@msg.SenderId</td>
                                <td>@(msg.ReceiverId.HasValue? msg.ReceiverId.ToString() : "Broadcast")</td>
                                <td>@msg.MessageText</td>
                                <td>@msg.ArchivedDate?.ToLocalTime().ToString("g")</td>
                                <td>
                                    <form method="post" asp-action="RestoreMessage">
                                        <input type="hidden" name="id" value="@msg.MessageId" />
                                        <button class="btn btn-sm btn-success">Restore</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-muted">No archived messages.</div>
            }
        </main>
    </div>
</div>
