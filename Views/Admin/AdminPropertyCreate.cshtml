@model EliteRentals.Models.DTOs.PropertyUploadDto
@{
    ViewData["Title"] = "Admin â€¢ Add Property";
    Layout = "_Layout";
}

<style>
  :root { --admin-sidebar-w: 240px; }
  @@media (min-width: 768px){
    .admin-main { margin-left: var(--admin-sidebar-w); padding: 1.25rem 1.5rem; }
  }
</style>

<div class="container-fluid">
  <div class="row">
    @await Html.PartialAsync("_AdminSidebar")

    <main class="admin-main col px-0">
      <h2 class="h4 mb-3">Add Property</h2>

      <div class="card shadow-sm">
        <div class="card-body">
          <form asp-action="AdminPropertyCreate" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="row g-3">
              <div class="col-md-6">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
              </div>
              <div class="col-md-6">
                <label asp-for="RentAmount" class="form-label">Rent Amount</label>
                <input asp-for="RentAmount" class="form-control" type="number" step="0.01" />
              </div>

              <div class="col-md-12">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
              </div>

              <div class="col-md-6">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" class="form-control" />
              </div>
              <div class="col-md-3">
                <label asp-for="City" class="form-label">City</label>
                <input asp-for="City" class="form-control" />
              </div>
              <div class="col-md-3">
                <label asp-for="Province" class="form-label">Province</label>
                <input asp-for="Province" class="form-control" />
              </div>

              <div class="col-md-4">
                <label asp-for="Country" class="form-label">Country</label>
                <input asp-for="Country" class="form-control" />
              </div>
              <div class="col-md-4">
                <label asp-for="NumOfBedrooms" class="form-label">Bedrooms</label>
                <input asp-for="NumOfBedrooms" class="form-control" type="number" />
              </div>
              <div class="col-md-4">
                <label asp-for="NumOfBathrooms" class="form-label">Bathrooms</label>
                <input asp-for="NumOfBathrooms" class="form-control" type="number" />
              </div>

              <div class="col-md-4">
                <label asp-for="ParkingType" class="form-label">Parking Type</label>
                <input asp-for="ParkingType" class="form-control" />
              </div>
              <div class="col-md-4">
                <label asp-for="NumOfParkingSpots" class="form-label">Parking Spots</label>
                <input asp-for="NumOfParkingSpots" class="form-control" type="number" />
              </div>
              <div class="col-md-4">
                <label asp-for="PetFriendly" class="form-label">Pet Friendly</label>
                <select asp-for="PetFriendly" class="form-select">
                  <option value="true">Yes</option>
                  <option value="false">No</option>
                </select>
              </div>

              <div class="col-md-4">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" class="form-select">
                  <option>Available</option>
                  <option>Occupied</option>
                </select>
              </div>

              <div class="col-md-8">
                <label class="form-label">Image</label>
                <input type="file" name="image" class="form-control" accept="image/*" />
              </div>
            </div>

            <div class="mt-3 d-flex gap-2">
              <button class="btn btn-primary" type="submit">Create</button>
              <a asp-action="AdminProperties" class="btn btn-outline-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
