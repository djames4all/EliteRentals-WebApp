@{
    ViewData["Title"] = "Admin Properties - EliteRentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("_AdminSidebar")

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
            <div class="d-flex justify-content-between align-items-center pb-2 mb-3 border-bottom">
                <h2 class="h3">Property Management</h2>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPropertyModal">
                    Add New Property
                </button>
            </div>

            <!-- Properties Table -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-hover align-middle" id="propertiesTable">
                        <thead>
                            <tr>
                                <th>Thumbnail</th>
                                <th>Property Name</th>
                                <th>Address</th>
                                <th>Rent</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 1; i <= 6; i++)
                            {
                                <tr>
                                    <td><img src="https://via.placeholder.com/60" class="rounded" /></td>
                                    <td>Property @i</td>
                                    <td>@i Main St</td>
                                    <td>R@(5000 + i * 1000)</td>
                                    <td>
                                        <span class="badge @(i % 2 == 0 ? "bg-warning text-dark" : "bg-success")">
                                            @(i % 2 == 0 ? "Occupied" : "Available")
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-info edit-btn">Edit</button>
                                        <button class="btn btn-sm btn-danger delete-btn">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Add Property Modal -->
<div class="modal fade" id="addPropertyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Property</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addPropertyForm">
                    <div class="mb-3">
                        <label class="form-label">Property Name</label>
                        <input type="text" class="form-control" id="newPropertyName" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <input type="text" class="form-control" id="newPropertyAddress" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Rent</label>
                        <input type="number" class="form-control" id="newPropertyRent" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-control" id="newPropertyStatus">
                            <option>Available</option>
                            <option>Occupied</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Property</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Property Modal -->
<div class="modal fade" id="editPropertyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Property</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editPropertyForm">
                    <input type="hidden" id="editRowIndex" />
                    <div class="mb-3">
                        <label class="form-label">Property Name</label>
                        <input type="text" class="form-control" id="editPropertyName" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <input type="text" class="form-control" id="editPropertyAddress" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Rent</label>
                        <input type="number" class="form-control" id="editPropertyRent" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-control" id="editPropertyStatus">
                            <option>Available</option>
                            <option>Occupied</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Property</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this property?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let deleteRow;
        let editRow;

        // Handle Edit (open modal with row data)
        document.querySelectorAll('.edit-btn').forEach((btn) => {
            btn.addEventListener('click', function () {
                editRow = this.closest('tr');

                document.getElementById('editPropertyName').value = editRow.cells[1].innerText;
                document.getElementById('editPropertyAddress').value = editRow.cells[2].innerText;
                document.getElementById('editPropertyRent').value = editRow.cells[3].innerText.replace("R", "");
                document.getElementById('editPropertyStatus').value = editRow.cells[4].innerText.trim();

                new bootstrap.Modal(document.getElementById('editPropertyModal')).show();
            });
        });

        // Save Changes from Edit Modal
        document.getElementById('editPropertyForm').addEventListener('submit', function (e) {
            e.preventDefault();

            editRow.cells[1].innerText = document.getElementById('editPropertyName').value;
            editRow.cells[2].innerText = document.getElementById('editPropertyAddress').value;
            editRow.cells[3].innerText = "R" + document.getElementById('editPropertyRent').value;

            let status = document.getElementById('editPropertyStatus').value;
            editRow.cells[4].innerHTML = `<span class="badge ${status === "Available" ? "bg-success" : "bg-warning text-dark"}">${status}</span>`;

            bootstrap.Modal.getInstance(document.getElementById('editPropertyModal')).hide();
        });

        // Handle Delete
        document.querySelectorAll('.delete-btn').forEach((btn) => {
            btn.addEventListener('click', function () {
                deleteRow = this.closest('tr');
                new bootstrap.Modal(document.getElementById('deleteConfirmModal')).show();
            });
        });

        document.getElementById('confirmDeleteBtn').addEventListener('click', function () {
            deleteRow.remove();
            bootstrap.Modal.getInstance(document.getElementById('deleteConfirmModal')).hide();
        });

        // Handle Add Property
        document.getElementById('addPropertyForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const name = document.getElementById('newPropertyName').value;
            const address = document.getElementById('newPropertyAddress').value;
            const rent = document.getElementById('newPropertyRent').value;
            const status = document.getElementById('newPropertyStatus').value;

            const table = document.querySelector('#propertiesTable tbody');
            const newRow = table.insertRow();
            newRow.innerHTML = `
                <td><img src="https://via.placeholder.com/60" class="rounded" /></td>
                <td>${name}</td>
                <td>${address}</td>
                <td>R${rent}</td>
                <td><span class="badge ${status === "Available" ? "bg-success" : "bg-warning text-dark"}">${status}</span></td>
                <td>
                    <button class="btn btn-sm btn-info edit-btn">Edit</button>
                    <button class="btn btn-sm btn-danger delete-btn">Delete</button>
                </td>
            `;

            // Reattach event listeners for new row
            newRow.querySelector('.edit-btn').addEventListener('click', function () {
                editRow = this.closest('tr');
                document.getElementById('editPropertyName').value = editRow.cells[1].innerText;
                document.getElementById('editPropertyAddress').value = editRow.cells[2].innerText;
                document.getElementById('editPropertyRent').value = editRow.cells[3].innerText.replace("R", "");
                document.getElementById('editPropertyStatus').value = editRow.cells[4].innerText.trim();
                new bootstrap.Modal(document.getElementById('editPropertyModal')).show();
            });

            newRow.querySelector('.delete-btn').addEventListener('click', function () {
                deleteRow = this.closest('tr');
                new bootstrap.Modal(document.getElementById('deleteConfirmModal')).show();
            });

            bootstrap.Modal.getInstance(document.getElementById('addPropertyModal')).hide();
            this.reset();
        });
    </script>
}
