@model EliteRentals.Models.DTOs.LeaseCreateUpdateDto
@{
    ViewData["Title"] = "Add Lease";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-3">Add New Lease</h2>
    <form asp-action="AddLease" method="post" class="card shadow-sm p-4">

        <div class="mb-3">
            <label>Tenant</label>
            <select asp-for="TenantId" class="form-select" asp-items="@(new SelectList(ViewBag.Tenants, "UserId", "FirstName"))">
                <option value="">Select Tenant</option>
            </select>
        </div>

        <div class="mb-3">
            <label>Property</label>
            <select asp-for="PropertyId" class="form-select" asp-items="@(new SelectList(ViewBag.Properties, "PropertyId", "Title"))">
                <option value="">Select Property</option>
            </select>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label>Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" />
            </div>
            <div class="col">
                <label>End Date</label>
                <input asp-for="EndDate" type="date" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label>Deposit</label>
            <input asp-for="Deposit" type="number" step="0.01" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Status</label>
            <select asp-for="Status" class="form-select">
                <option>Pending Approval</option>
                <option>Active</option>
                <option>Terminated</option>
            </select>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-action="ManagerLeases" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Lease</button>
        </div>
    </form>
</div>
