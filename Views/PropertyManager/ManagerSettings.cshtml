@{
    ViewData["Title"] = "Manager Settings - EliteRentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("_ManagerSidebar")

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
            <h2 class="h3 pb-2 mb-3 border-bottom">Settings</h2>

            <!-- Profile Settings -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Profile Settings</h5>
                    <form id="profileForm">
                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="fullName" value="Manager">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" value="manager@eliterentals.com">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" value="manager123">
                                <button type="button" class="btn btn-outline-secondary" id="togglePassword">Show</button>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>

            <!-- System Preferences -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">System Preferences</h5>
                    <form id="preferencesForm">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="notifyEmail" checked>
                            <label class="form-check-label" for="notifyEmail">Email Notifications</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="notifySMS">
                            <label class="form-check-label" for="notifySMS">SMS Notifications</label>
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Save Preferences</button>
                    </form>
                </div>
            </div>

            <!-- Profile Preview -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Profile Preview</h5>
                    <p><strong>Name:</strong> <span id="previewName">Manager</span></p>
                    <p><strong>Email:</strong> <span id="previewEmail">manager@eliterentals.com</span></p>
                    <p><strong>Password:</strong> <span id="previewPassword">••••••••</span></p>
                    <p><strong>Email Notifications:</strong> <span id="previewEmailNotify">Enabled</span></p>
                    <p><strong>SMS Notifications:</strong> <span id="previewSMSNotify">Disabled</span></p>
                </div>
            </div>

        </main>
    </div>
</div>

@section Scripts {
    <script>
        // Mock Data
        let managerProfile = {
            fullName: "Manager",
            email: "manager@eliterentals.com",
            password: "manager123"
        };

        let systemPreferences = {
            emailNotify: true,
            smsNotify: false
        };

        // Profile form elements
        const profileForm = document.getElementById('profileForm');
        const fullNameInput = document.getElementById('fullName');
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const togglePasswordBtn = document.getElementById('togglePassword');

        // Toggle password visibility
        togglePasswordBtn.addEventListener('click', () => {
            if(passwordInput.type === "password"){
                passwordInput.type = "text";
                togglePasswordBtn.textContent = "Hide";
            } else {
                passwordInput.type = "password";
                togglePasswordBtn.textContent = "Show";
            }
        });

        // Save profile form
        profileForm.addEventListener('submit', (e) => {
            e.preventDefault();
            managerProfile.fullName = fullNameInput.value;
            managerProfile.email = emailInput.value;
            managerProfile.password = passwordInput.value;
            updatePreview();
            alert('Profile settings saved!');
        });

        // Preferences form elements
        const preferencesForm = document.getElementById('preferencesForm');
        const notifyEmailInput = document.getElementById('notifyEmail');
        const notifySMSInput = document.getElementById('notifySMS');

        // Save system preferences
        preferencesForm.addEventListener('submit', (e) => {
            e.preventDefault();
            systemPreferences.emailNotify = notifyEmailInput.checked;
            systemPreferences.smsNotify = notifySMSInput.checked;
            updatePreview();
            alert('System preferences saved!');
        });

        // Update the preview section
        function updatePreview() {
            document.getElementById('previewName').textContent = managerProfile.fullName;
            document.getElementById('previewEmail').textContent = managerProfile.email;
            document.getElementById('previewPassword').textContent = "••••••••";
            document.getElementById('previewEmailNotify').textContent = systemPreferences.emailNotify ? "Enabled" : "Disabled";
            document.getElementById('previewSMSNotify').textContent = systemPreferences.smsNotify ? "Enabled" : "Disabled";
        }

        // Initialize preview
        updatePreview();
    </script>
}
