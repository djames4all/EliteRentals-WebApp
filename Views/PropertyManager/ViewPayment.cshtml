@model EliteRentals.Models.DTOs.PaymentDto
@{
    ViewData["Title"] = "Payment Details";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-credit-card me-2"></i>Payment Details</h4>
        </div>

        <div class="card-body p-4">
            <div class="row mb-3">

                <div class="col-md-6 text-md-end">
                    <h6 class="text-muted mb-1">Date</h6>
                    <p class="fw-semibold">@Model.Date.ToString("dd MMM yyyy")</p>
                </div>
            </div>

            <hr />

            <div class="row text-center my-4">
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="p-3 border rounded-3 bg-light">
                        <h6 class="text-muted mb-1">Amount</h6>
                        <p class="fs-5 fw-bold text-success">@($"R{Model.Amount:N2}")</p>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="p-3 border rounded-3 bg-light">
                        <h6 class="text-muted mb-1">Status</h6>
                        @if (Model.Status == "Paid")
                        {
                            <span class="badge bg-success fs-6 px-3 py-2">@Model.Status</span>
                        }
                        else if (Model.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark fs-6 px-3 py-2">@Model.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-danger fs-6 px-3 py-2">@Model.Status</span>
                        }
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="p-3 border rounded-3 bg-light">
                        <h6 class="text-muted mb-1">Payment ID</h6>
                        <p class="fw-bold text-primary">#@Model.PaymentId</p>
                    </div>
                </div>
            </div>

            <hr />

            @if (Model.ProofData != null)
            {
                <div class="text-center mt-4">
                    <h6 class="text-muted mb-3">Proof of Payment</h6>
                    <img src="data:@Model.ProofType;base64,@Convert.ToBase64String(Model.ProofData)"
                         alt="Proof of Payment"
                         class="img-fluid rounded-3 shadow-sm border"
                         style="max-width: 400px;" />
                </div>
            }
            else
            {
                <div class="alert alert-secondary text-center mt-4 rounded-3">
                    <i class="bi bi-file-earmark-x fs-4 me-2"></i>No proof of payment uploaded.
                </div>
            }

            <div class="mt-4 text-center">
                <a href="@Url.Action("ManagerPayments", "PropertyManager")" class="btn btn-outline-primary rounded-pill px-4">
                    <i class="bi bi-arrow-left-circle me-2"></i>Back to Payments
                </a>
            </div>
        </div>
    </div>
</div>
