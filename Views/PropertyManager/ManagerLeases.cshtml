@model IEnumerable<EliteRentals.Models.DTOs.LeaseDto>
@{
    ViewData["Title"] = "Leases Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("_ManagerSidebar")
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">

            <div class="d-flex justify-content-between align-items-center pb-2 mb-3 border-bottom">
                <h2 class="h3">Lease Management</h2>
                    <div>
        <a asp-action="AddLease" class="btn btn-primary me-2">Add New Lease</a>
        <a asp-action="ArchivedLeases" class="btn btn-outline-secondary">Archived Leases</a>
    </div>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            else if (!Model.Any())
            {
                <div class="alert alert-warning">No leases available.</div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Tenant</th>
                                    <th>Property</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var lease in Model)
                                {
                                    <tr>
                                        <td>@lease.TenantName</td>
                                        <td>@lease.PropertyTitle</td>
                                        <td>@lease.StartDate.ToString("yyyy-MM-dd")</td>
                                        <td>@lease.EndDate.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <span class="badge @(lease.Status switch {
                                                "Active" => "bg-success",
                                                "Pending Approval" => "bg-warning text-dark",
                                                "Terminated" => "bg-danger",
                                                _ => "bg-secondary"
                                            })">
                                                @lease.Status
                                            </span>
                                        </td>
<td>
    <a asp-action="ViewLease" asp-route-id="@lease.LeaseId" class="btn btn-sm btn-info">View</a>
    <a asp-action="EditLease" asp-route-id="@lease.LeaseId" class="btn btn-sm btn-warning">Edit</a>
    <a asp-action="DeleteLease" asp-route-id="@lease.LeaseId" class="btn btn-sm btn-danger">Delete</a>
<form asp-action="ArchiveLease" asp-route-id="@lease.LeaseId" method="post" class="d-inline">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-sm btn-secondary" 
        onclick="return confirm('Archive this lease?');">
        Archive
    </button>
</form>

</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </main>
    </div>
</div>
