@using EliteRentals.Models.DTOs
@model EliteRentals.Models.DTOs.LeaseCreateUpdateDto
@{
    ViewData["Title"] = "Edit Lease";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark text-center rounded-top-4">
            <h3 class="mb-0">Edit Lease</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="EditLease" method="post">
                <input asp-for="LeaseId" type="hidden" />

                <div class="mb-3">
                    <label>Tenant</label>
                    <select asp-for="TenantId" class="form-select"
                            asp-items="@(new SelectList(ViewBag.Tenants as List<TenantDto>, "UserId", "FirstName", Model?.TenantId))">
                        <option value="">Select Tenant</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label>Property</label>
                    <select asp-for="PropertyId" class="form-select"
                            asp-items="@(new SelectList(ViewBag.Properties as List<PropertyDto>, "PropertyId", "Title", Model?.PropertyId))">
                        <option value="">Select Property</option>
                    </select>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label>Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                    </div>
                    <div class="col">
                        <label>End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label>Deposit</label>
                    <input asp-for="Deposit" type="number" step="0.01" class="form-control" />
                </div>

                <div class="mb-3">
                    <label>Status</label>
                    <select asp-for="Status" class="form-select">
                        <option>Pending Approval</option>
                        <option>Active</option>
                        <option>Terminated</option>
                    </select>
                </div>

                <div class="text-end">
                    <a asp-action="ManagerLeases" class="btn btn-outline-secondary me-2 rounded-pill px-4">Cancel</a>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
